<h1><%= @product.title %></h1>

<p><%= @product.description %></p>

<p>$<%= @product.price %>0</p>

<p><%= @product.left %></p>


<ul>
  <%= link_to "Edit", edit_product_path(@product), class:"btn btn-secondary" %>
  <%= link_to "Destroy", product_path(@product), class:"btn btn-danger", data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure you want to delete this listing?"
                  } %>
  <%= link_to "Back to Current Listings", products_path, class:"btn btn-outline-success" %>
</ul>