<h1><%= @product.title %></h1>

<p><%= @product.description %></p>

<p>$<%= @product.price %>0</p>

<p><%= @product.available %></p>


<ul>
  <button class="btn btn-secondary" type="button"><%= link_to "Edit", edit_product_path(@product) %></button>
  <button class="btn btn-danger" type="button"><%= link_to "Destroy", product_path(@product), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure you want to delete this listing?"
                  } %></button>
  <button type="button" class="btn btn-outline-success"><%= link_to "Back to Current Listings", products_path %></button>
</ul>