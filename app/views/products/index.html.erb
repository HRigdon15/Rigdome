<h1>Products</h1>



<ul>
 
  <% @products.each do |product| %>
    <div class="list-group">
    <li>
      <a href="#" class="list-group-item list-group-item-action active" aria-current="true">
      <%= link_to product.title, product%>
      </a>
      <%= image_tag product.image, width: 100, height: 100 %>
      <%= link_to "Buy Now", buy_path(product) %>
      <%= product.left %>
    </li>
    </div>
  <% end %>
  
</ul>



<%= link_to "New Product", new_product_path, class:"btn btn-outline-primary"%>

<%= link_to "Check Out", checkout_path, class:"btn btn-outline-primary" %>

<%= link_to "Main Page", root_path, class:"btn btn-outline-primary" %>

<h2> Your shopping cart has <%=@cart.length%> items</h2>
